@inherits SliderPanelBase
@inject SliderInterop jsInterop

<div id="@LeftPanelId" class="noselect"
     style="@LeftStyleString
    position:absolute;
    overflow:auto;
    top:0px;
    left:0px;
    height:@HeightPx;
    width:@LeftPanelWidthPx;">
    <CascadingValue Value=@this>
        @LeftChildContent
    </CascadingValue>
</div>

<div id="@SliderId"
     style="background-color: lightgray;
    cursor: e-resize;
    width: @SliderWidthPx;
    position: absolute;
    top: 0px;
    left: @LeftPanelWidthPx;
    height: @HeightPx;">
</div>

<div id="@RightPanelId" class="noselect"
     style="@RightStyleString position:absolute;
    overflow:auto;
    top:0px;
    left:@RightPanelLeftPx;
    height:@HeightPx;
    width:@RightPanelWidthPx;">
    <CascadingValue Value=@this>
        @RightChildContent
    </CascadingValue>
</div>
